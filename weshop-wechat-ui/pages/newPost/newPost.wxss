.container {
  padding: 20rpx;
}

.header {
  margin-top: 60rpx;
}
  
.image-section {  
  display: flex;  
  flex-wrap: wrap;  
  margin-bottom: 20px;  
}  
  
.image-item {  
  width: 100px;  
  height: 100px;  
  margin: 10px;  
  position: relative;  
}  
  
.delete-btn {  
  position: absolute;  
  top: 0;  
  right: 0;  
  width: 20px;  
  height: 20px;  
  background-color: red;  
  color: white;  
  border: none;  
  border-radius: 50%;  
  font-size: 14px;  
}  
  
.add-image-btn {  
  margin-top: 20px;  
  padding: 10px 20px;  
  background-color: #1aad19;  
  color: white;  
  border: none;  
  border-radius: 5px;  
}  
  
.submit-btn {  
  padding: 10px 20px;  
  background-color: #ff5722;  
  color: white;  
  border: none;  
  border-radius: 5px;  
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.page-section {
  margin-top: 80rpx;
  /* width: fit-content; */
}

.weui-cell__bd {
  margin: 30rpx 0;
}

.image-upload {
  margin-top: 20rpx;
}

.uploaded-image {
  width: 300rpx;
  height: 300rpx;
  margin-top: 20rpx;
}

.submit-button, .reset-button {
  margin-top: 20rpx;
}