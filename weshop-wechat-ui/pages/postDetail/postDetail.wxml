<view class="container" style="position: relative;">
  <!-- 顶部图片 -->
  <image class="post-image" src="{{postDetail.imageUrl}}" mode="aspectFit"></image>
  <!-- 中间内容 -->
  <block>
    <view class="post-content" style="width: 100%;">
      <view class="fall-title-wrap" style=" font-size: 30rpx;font-weight: 600;color: #333; margin-bottom: 12px;">
        <navigator url="url" class="fall-title">{{postDetail.title}}</navigator>
      </view>
      <rich-text nodes="{{postDetail.content}}"></rich-text>
      <!-- 如果内容中包含多张图片，你可能需要遍历一个图片数组并显示它们 -->
    </view>
  </block>


  <!-- 作者信息 -->
  <view class="fall-bottom" style="margin-top: 10%;  display: flex;  justify-content: flex-end; align-items: center;">
    <view class="fall-toux-name">
      <image class="fall-toux" src="{{postDetail.headUrl}}"></image>
      <text class="fall-name">{{postDetail.userName}}</text>
      <view class="footer-item" style="margin-left: 20px;">
        <text style="font-size:23rpx; ">{{postDetail.gmtCreate}}</text>
      </view>
    </view>

    <!-- <button bindtap="likePost" style="border-width: 0; border-style: none; margin-left: 120px; font-size: smaller;" >点赞</button> -->
    <view class="fall-love-num" style="margin-left: 150px;" bindtap="likePost">
      <text wx:if="{{postDetail.isLike == 1}}" class="cuIcon-likefill lg text-red"></text>
      <text wx:if="{{postDetail.isLike == 0}}" class="cuIcon-like lg text-gray"></text>
      <text class="fall-num">{{postDetail.likeNum}}</text>
    </view>

  </view>
  <view class="divider" style="  justify-content: center;  align-items: center;  "></view>
  <!-- 历史评论 -->
  <scroll-view class="comments">
    <text class="t" style="font-weight: bolder;">评论区</text>
    <view class="has-comments" wx:if="{{postDetail.commentList.length > 0 }}">
      <view class="h" style=" margin-bottom: 20px;">
      </view>
      <view class="b">
        <view class="item" wx:for="{{postDetail.commentList}}" wx:key="{{item.id}}">
          <view class="info" style="margin-bottom: 20px;">
            <view class="user">
              <image class="avatar" src="{{item.userInfo.avatar}}"></image>
              <text class="nickname" style="font-size: small;">{{item.userInfo.nickname}}</text>
              <view class="time" style="font-size: small;">{{item.createTime}}</view>
              <view class="comment" style="font-size: smaller; margin-left: 40px;"> {{item.content}} </view>
            </view>
          </view>
        </view>
      </view>

    </view>
    <view class="no-comments" wx:if="{{postDetail.commentList.length <= 0}}">
      <view class="b">
        <image class="icon" src="http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/no-comment-560f87660a.png"></image>
      </view>
    </view>
  </scroll-view>
</view>
<!-- 评论信息 -->
<view class="post-footer" style="width: 100%; position: fixed;bottom: 20px; ">
  <view class="footer-item" style="display: flex;">
    <input class="weui-input" name="title" style="margin-left: 10px; height: 40px; width: 70%; background-color: rgb(228, 226, 226);    border-radius: 60rpx;" placeholder=" 说几句" />
    <button bindtap="commentPost" style="width:20%;background-color:rgb(212, 88, 30);border-radius:34px;font-size: initial; font-weight: 700;color: white;">发送</button>
  </view>
  <view class="footer-item">
    <text>{{postDetail.likeCount}}</text>
  </view>
</view>