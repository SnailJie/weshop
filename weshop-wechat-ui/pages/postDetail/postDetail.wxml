<view class="container">  
  <!-- 顶部图片 -->  
  <image class="post-image" src="{{post.imageUrl}}" mode="aspectFit"></image>  
  
  <!-- 中间内容 -->  
  <view class="post-content">  
    <rich-text nodes="{{post.content}}"></rich-text>  
    <!-- 如果内容中包含多张图片，你可能需要遍历一个图片数组并显示它们 -->  
  </view>  
  
  <!-- 底部信息 -->  
  <view class="post-footer">  
    <view class="footer-item">  
      <text>作者：{{post.author}}</text>  
    </view>  
    <view class="footer-item">  
      <text>发布时间：{{post.timestamp}}</text>  
    </view>  
    <view class="footer-item">  
      <button bindtap="likePost">点赞</button>  
      <text>{{post.likeCount}}</text>  
    </view>  
    <view class="footer-item">  
      <button bindtap="commentPost">评论</button>  
    </view>  
    <view class="footer-item">  
      <button bindtap="sharePost">分享</button>  
    </view>  
  </view>  
</view>