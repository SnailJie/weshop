.container {
  padding: 20rpx;
}

.header {
  margin-top: 60rpx;
}
.divider {  
  width: 80%;  
  height: 1px;  
  background-color: #e5e5e5;  
  margin: 10px 0;  
}
.image-container {  
  /* 其他样式，如宽度、高度、边距等，根据需要添加 */  
  display: inline-block; /* 使容器根据内容大小自动调整 */  
  background-color: white;
}  
.post-image {  
  width: 100%;  
  
  margin-bottom: 20px;  
}  
.image-section {  
  display: flex;  
  flex-wrap: wrap;  
  margin-bottom: 20px;  
  /* margin-left: 20px;   */
  align-items: center;  
  background-color: white;
}  
  
.image-item {  
  width: 100px;  
  height: 100px;  
  margin: 10px;  
  margin-left: 20px;
}  
  
.delete-btn {  
  position: absolute;  
  top: 0;  
  right: 0;  
  width: 20px;  
  height: 28px;  
  color: #795548;  
  border: none;  
  border-radius: 50%;  
  font-size: xx-small;  
  z-index: 1;
  background-size: cover; /* 使背景图片覆盖整个按钮 */  
  background-position: center; /* 使背景图片居中 */  
  border: none; /* 去掉按钮的边框，如果需要的话 */

  background-image: url('/image/deletebtn.png');
}  

.picker {  
  padding: 10px;  
  border: 1px solid #ccc;  
  border-radius: 4px;  
  background-color: #fff;  
}

.add-image-btn {  
  margin-top: 20px;  
  padding: 10px 20px;  
  background-color: #1aad19;  
  color: white;  
  border: none;  
  border-radius: 5px;  
}  
.button-wrapper {  
  display: flex;  
  width: 100%;  
  justify-content: flex-end; /* 将“+”按钮推到右侧，但当有图片时，它会被包裹在另一个view中并移到行尾 */  
}  
.submit-btn {  
  padding: 10px 20px;  
  background-color: #ff5722;  
  color: white;  
  border: none;  
  border-radius: 5px;  
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.page-section {
  margin-top: 80rpx;
  /* width: fit-content; */
}

.weui-cell__bd {
  margin: 30rpx 0;
}

.image-upload {
  margin-top: 20rpx;
}

.uploaded-image {
  width: 300rpx;
  height: 300rpx;
  margin-top: 20rpx;
}

.submit-button, .reset-button {
  margin-top: 20rpx;
  position: fixed; /* 固定定位 */  
  bottom: 20px; /* 距离页面底部20px */  
  left: 50%; /* 水平居中，但需要先偏移50% */  
  transform: translateX(-50%); /* 水平方向反向偏移自身宽度的50%，实现真正居中 */  
  border-radius: 40px; /* 边框圆弧 */  
  width: 300px;
  height: 50px;
  /* 其他样式，如背景色、字体大小等，可以根据需要添加 */  
  background-color: #c5783a; /* 示例背景色 */  
  color: white; /* 示例文字颜色 */  
  font-weight: 600;
  padding: 5px 20px; /* 示例内边距 */  
  font-size: 16px; /* 示例字体大小 */  
}

.send-post {
width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background: #b4282d;
  position: fixed;
  bottom: 0;
  left: 0;
  border-radius: 0;
  color: #fff;
  font-size: 28rpx;
}

.fall-content{
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.fall-left{
  width: 345rpx;
}

.fall-right{
  width: 345rpx;
  margin-left: 20rpx;
}
.fall-li{
  margin-top: 20rpx;
  background: #ffffff;
  border-radius: 10rpx;
}
.fall-pic{
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  width: 345rpx;
}

.fall-bottom{
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  align-items: center;
}
.fall-title-wrap{
  padding: 5rpx 20rpx 0rpx 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}
.fall-toux{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.fall-name{
  font-size: 25rpx;
  color: #333;
  font-weight: 300;
  margin-left: 20rpx;
}
.fall-toux-name{
  display: flex;
  align-items: center;
  margin: 20rpx 0rpx;
}
.fall-love-num{
  color: #333;
  display: flex;
  align-items: center;
}
.fall-num{
  font-size: 25rpx;
  margin-left: 5rpx;
}
.no-comments .icon{
  margin: 48rpx auto 18rpx auto;
  height: 130rpx;
  display: block;
  width: 115rpx;
}

.comments{
  width: 100%;
  height: auto;
  padding-left:30rpx;
  background: #fff;
  margin-top: 20rpx;
}
.comments .user .avatar{
  display: block;
  float: left;
  width: 67rpx;
  height: 67rpx;
  margin-right: 17rpx;
  border-radius: 50%;
}